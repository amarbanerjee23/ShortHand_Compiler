int n, i, flag = 0;
print "Enter a positive integer: ";
read n;
loop i = 2, i <= n/2, ++i
{
// condition loop nonprime number
if n%i == 0
{
flag = 1;
break;
}
}
if n == 1
{
print "1 is neither a prime nor a composite number");
}
else
{
if flag == 0
print n, "is a prime number";
else
print n, "is not a prime number.";
}